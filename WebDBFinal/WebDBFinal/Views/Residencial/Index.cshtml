@model IEnumerable<WebDBFinal.Entities.Residencial>

@{
    ViewData["Title"] = "Gestión de Residenciales";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="mb-4">Gestión de Residenciales</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>¡Éxito!</strong> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>¡Error!</strong> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Lista de Residenciales</h5>
                <a asp-action="Create" class="btn btn-light btn-sm">
                    <i class="bi bi-plus-circle"></i> Crear Nuevo Residencial
                </a>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Código</th>
                                    <th>Nombre</th>
                                    <th>Contacto Principal</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CodigoResidencial</td>
                                        <td>@item.Nombre</td>
                                        <td>@item.ContactoPrincipal</td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@item.CodigoResidencial" class="btn btn-warning btn-sm me-1">
                                                <i class="bi bi-pencil"></i> Editar
                                            </a>
                                            <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('¿Está seguro que desea eliminar este residencial?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.CodigoResidencial" />
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="bi bi-trash"></i> Eliminar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle"></i> No hay residenciales registrados. 
                        <a asp-action="Create" class="alert-link">Crear el primero</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-cerrar alertas después de 5 segundos
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
