                    { name: 'TipoMarcaje', icon: 'clock-history', color: 'info', url: '/TipoMarcaje' },
                    { name: 'TipoGarita', icon: 'shield-lock-fill', color: 'success', url: '/TipoGarita' },
                    { name: 'TipoDocumentoFiscal', icon: 'file-earmark-text-fill', color: 'secondary', url: '/TipoDocumentoFiscal' },
                    { name: 'TipoIntegrante', icon: 'person-lines-fill', color: 'primary', url: '/TipoIntegrante' },
                    { name: 'TipoCargo', icon: 'list-task', color: 'success', url: '/TipoCargo' },
                    { name: 'TipoRol', icon: 'tags', color: 'primary', url: '/TipoRol' }
                ];

                var container = $('#allEntitiesContainer');
                container.empty();

                allEntities.forEach(function(entity) {
                    var card = `
                        <div class="col-md-3 col-lg-2 mb-3">
                            <div class="card h-100 shadow-sm text-center">
                                <div class="card-body p-2">
