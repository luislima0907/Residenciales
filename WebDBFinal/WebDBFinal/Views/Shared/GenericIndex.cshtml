@model IEnumerable<object>
@using System.Reflection

@{
    ViewData["Title"] = $"Gestión de {ViewBag.EntityName}";
    var properties = (List<PropertyInfo>)ViewBag.Properties;
}

<div class="row">
    <div class="col-md-12">
        <h2 class="mb-4">Gestión de @ViewBag.EntityName</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>¡Éxito!</strong> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>¡Error!</strong> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Lista de @ViewBag.EntityName</h5>
                <a asp-action="Create" class="btn btn-light btn-sm">
                    <i class="bi bi-plus-circle"></i> Crear Nuevo
                </a>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    @foreach (var prop in properties)
                                    {
                                        var columnName = prop.Name;
                                        
                                        // Personalizar nombres de columnas para hacerlos más amigables
                                        if (columnName == "CodigoPersonaNavigation")
                                        {
                                            columnName = "Persona";
                                        }
                                        else if (columnName == "CodigoTipoTelefonoNavigation")
                                        {
                                            columnName = "Tipo Teléfono";
                                        }
                                        else if (columnName == "CodigoDepartamentoNavigation")
                                        {
                                            columnName = "Departamento";
                                        }
                                        else if (columnName == "CodigoMarcaNavigation")
                                        {
                                            columnName = "Marca";
                                        }
                                        else if (columnName == "LineaVehiculo")
                                        {
                                            columnName = "Línea Vehículo";
                                        }
                                        else if (columnName.EndsWith("Navigation"))
                                        {
                                            // Quitar "Navigation" y "Codigo" del nombre
                                            columnName = columnName.Replace("Navigation", "").Replace("Codigo", "");
                                        }
                                        
                                        <th>@columnName</th>
                                    }
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @foreach (var prop in properties)
                                        {
                                            var value = prop.GetValue(item);
                                            <td>
                                                @if (value is bool boolValue)
                                                {
                                                    <span class="badge @(boolValue ? "bg-success" : "bg-secondary")">
                                                        @(boolValue ? "Sí" : "No")
                                                    </span>
                                                }
                                                else if (value is byte byteValue && (prop.Name.StartsWith("Es") || prop.Name.Contains("Activ") || prop.Name.Contains("Ocup") || prop.Name.Contains("Alquil") || prop.Name.Contains("Pagado")))
                                                {
                                                    <span class="badge @(byteValue != 0 ? "bg-success" : "bg-secondary")">
                                                        @(byteValue != 0 ? "Sí" : "No")
                                                    </span>
                                                }
                                                else if (value is DateTime dateValue)
                                                {
                                                    @dateValue.ToString("dd/MM/yyyy")
                                                }
                                                else if (prop.Name == "LineaVehiculo" && value != null)
                                                {
                                                    @* Mostrar LineaVehiculo de forma legible *@
                                                    var lineaVehiculo = value as dynamic;
                                                    if (lineaVehiculo != null)
                                                    {
                                                        try
                                                        {
                                                            var marca = lineaVehiculo.CodigoMarcaNavigation?.Descripcion ?? "N/A";
                                                            var linea = lineaVehiculo.Descripcion ?? "N/A";
                                                            @($"{marca} - {linea}")
                                                        }
                                                        catch
                                                        {
                                                            @(value.ToString())
                                                        }
                                                    }
                                                }
                                                else if (prop.Name == "CodigoPersonaNavigation" && value != null)
                                                {
                                                    @* Mostrar Persona de forma legible *@
                                                    var persona = value as dynamic;
                                                    if (persona != null)
                                                    {
                                                        try
                                                        {
                                                            var nombreCompleto = $"{persona.PrimerNombre ?? ""} {persona.SegundoNombre ?? ""} {persona.PrimerApellido ?? ""} {persona.SegundoApellido ?? ""}".Trim();
                                                            @nombreCompleto
                                                        }
                                                        catch
                                                        {
                                                            @(value.ToString())
                                                        }
                                                    }
                                                }
                                                else if (prop.Name == "CodigoTipoTelefonoNavigation" && value != null)
                                                {
                                                    @* Mostrar TipoTelefono de forma legible *@
                                                    var tipoTelefono = value as dynamic;
                                                    if (tipoTelefono != null)
                                                    {
                                                        try
                                                        {
                                                            @(tipoTelefono.Descripcion ?? value.ToString())
                                                        }
                                                        catch
                                                        {
                                                            @(value.ToString())
                                                        }
                                                    }
                                                }
                                                else if (prop.Name == "CodigoSucursalNavigation" && value != null)
                                                {
                                                    @* Mostrar Sucursal de forma legible *@
                                                    var sucursal = value as dynamic;
                                                    if (sucursal != null)
                                                    {
                                                        try
                                                        {
                                                            @(sucursal.Descripcion ?? value.ToString())
                                                        }
                                                        catch
                                                        {
                                                            @(value.ToString())
                                                        }
                                                    }
                                                }
                                                else if (value != null && value.GetType().Namespace == "WebDBFinal.Entities")
                                                {
                                                    @* Para otras entidades de navegación, intentar mostrar un campo descriptivo *@
                                                    var descripcionProp = value.GetType().GetProperty("Descripcion");
                                                    if (descripcionProp != null)
                                                    {
                                                        @(descripcionProp.GetValue(value)?.ToString() ?? value.ToString())
                                                    }
                                                    else
                                                    {
                                                        @(value.ToString())
                                                    }
                                                }
                                                else
                                                {
                                                    @(value?.ToString() ?? "N/A")
                                                }
                                            </td>
                                        }
                                        <td class="text-center">
                                            @{
                                                var keyProps = item.GetType().GetProperties()
                                                    .Where(p => p.GetCustomAttribute<System.ComponentModel.DataAnnotations.KeyAttribute>() != null);
                                                var keyValues = string.Join(",", keyProps.Select(p => p.GetValue(item)?.ToString() ?? ""));
                                            }
                                            <a asp-action="Edit" asp-route-id="@keyValues" class="btn btn-warning btn-sm me-1">
                                                <i class="bi bi-pencil"></i> Editar
                                            </a>
                                            <form asp-action="Delete" method="post" style="display:inline;" onsubmit="return confirm('¿Está seguro que desea eliminar este registro?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="keys" value="@keyValues" />
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="bi bi-trash"></i> Eliminar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle"></i> No hay registros de @ViewBag.EntityName. 
                        <a asp-action="Create" class="alert-link">Crear el primero</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
